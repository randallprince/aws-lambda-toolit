{
  "compileOnSave": false,
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "importHelpers": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist/node-toolkit",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2018"
  },
  "exclude": ["node_modules", "spec"]
}
